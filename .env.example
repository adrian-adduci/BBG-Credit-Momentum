# Environment Variables for Cryptocurrency Trading Strategy System
# Copy this file to .env and fill in your values

# Application Settings
NUMEXPR_MAX_THREADS=16

# Data Source Configuration
# Options: excel, csv, bloomberg, crypto
DATA_SOURCE_TYPE=crypto
EXCHANGE=binance
TIMEFRAME=1h

# Legacy: Bloomberg/Excel Data (for backward compatibility)
# DATA_FILE_PATH=data/Economic_Data_2020_08_01.xlsx

# Cryptocurrency Exchange API Keys
# Binance (https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Coinbase (https://www.coinbase.com/settings/api)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here

# Kraken (https://www.kraken.com/u/security/api)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# Bybit (https://www.bybit.com/app/user/api-management)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# OKX (https://www.okx.com/account/my-api)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Bloomberg Terminal API Configuration
# Required for Bloomberg API data source (requires active Bloomberg Terminal)
# Setup: DAPI<GO> in Bloomberg Terminal to enable Desktop API
BLOOMBERG_HOST=localhost
BLOOMBERG_PORT=8194
BLOOMBERG_TIMEOUT=30000
BLOOMBERG_MAX_RETRIES=3

# Bloomberg API Authentication (if required by your organization)
# Most Bloomberg Terminals use localhost connection without explicit auth
# BLOOMBERG_AUTH_TOKEN=your_token_here

# Bloomberg Excel Fallback
# Path to Bloomberg Excel export file for hybrid/fallback mode
# BLOOMBERG_EXCEL_FALLBACK_PATH=data/bloomberg_export.xlsx

# Model Settings
MODEL_TYPE=XGBoost
MODEL_ESTIMATORS=1000
RANDOM_STATE=42

# Feature Settings (Crypto)
TARGET_COLUMN=BTC_USDT_close
MOMENTUM_COLUMNS=BTC_USDT_close,ETH_USDT_close,SOL_USDT_close
CRYPTO_FEATURES_ENABLED=true

# FastAPI Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
ENABLE_CORS=true

# Trading Configuration
INITIAL_CAPITAL=10000
POSITION_SIZE=0.1
TRANSACTION_COST=0.001

# Risk Management
MAX_DRAWDOWN_ALERT=0.15  # Alert if drawdown exceeds 15%
STOP_LOSS_PERCENT=0.05  # Stop loss at 5%
TAKE_PROFIT_PERCENT=0.10  # Take profit at 10%

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# PostgreSQL Database Configuration (LAN Database)
# Set these to enable database caching for OHLCV data, blockchain metrics, and model predictions
DB_HOST=localhost  # Change to your LAN database IP (e.g., 192.168.1.100)
DB_PORT=5432
DB_NAME=crypto_trading
DB_USER=your_db_username_here
DB_PASSWORD=your_db_password_here

# Blockchain On-Chain Data Providers
# Glassnode (https://studio.glassnode.com/settings/api)
# Provides on-chain metrics: MVRV, NVT, active addresses, exchange flows, etc.
GLASSNODE_API_KEY=your_glassnode_api_key_here

# CoinMetrics (https://coinmetrics.io/api/)
# Provides network data: hash rate, difficulty, fees, supply metrics
COINMETRICS_API_KEY=your_coinmetrics_api_key_here

# Optional: Additional Data Sources
# FRED_API_KEY=your_fred_api_key_here  # Federal Reserve Economic Data
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here  # Stock market data
