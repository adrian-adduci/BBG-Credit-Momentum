# Environment Variables for BBG-Credit-Momentum
# Copy this file to .env and fill in your values

# Application Settings
NUMEXPR_MAX_THREADS=16

# Data Source Configuration
DATA_SOURCE_TYPE=excel  # Options: excel, csv, bloomberg
DATA_FILE_PATH=data/Economic_Data_2020_08_01.xlsx

# Bloomberg API Credentials (if using Bloomberg data source)
# BLOOMBERG_HOST=localhost
# BLOOMBERG_PORT=8194
# BLOOMBERG_AUTH_TOKEN=your_token_here

# Model Settings
MODEL_TYPE=XGBoost
MODEL_ESTIMATORS=1000
RANDOM_STATE=42

# Feature Settings
TARGET_COLUMN=LF98TRUU_Index_OAS
MOMENTUM_COLUMNS=LF98TRUU_Index_OAS,LUACTRUU_Index_OAS

# Logging
LOG_LEVEL=INFO

# Optional: Database connection (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Optional: API Keys for other data sources
# FRED_API_KEY=your_fred_api_key_here
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
